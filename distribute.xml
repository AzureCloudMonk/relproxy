<?xml version="1.0" encoding="UTF-8"?>
<project basedir="." default="deploy_to_distribute" name="relproxy_dev" xmlns:artifact="antlib:org.apache.maven.artifact.ant">

    <path id="maven-ant-tasks.classpath" path="ant/maven-ant-tasks-2.1.3.jar" />
    <typedef resource="org/apache/maven/artifact/ant/antlib.xml"
             uri="antlib:org.apache.maven.artifact.ant"
             classpathref="maven-ant-tasks.classpath" />    
    
    <property file="conf/conf_local.properties"/>  <!-- just define property: maven_folder -->
    <property file="conf/conf.properties"/>
    <!--
    <property name="java.source.version" value="1.5" />
    <property name="java.target.version" value="1.5" /> 
    -->

    <path id="classPath">
        <!--<pathelement location="${program.lib}/ow2-jta-1.1-spec.jar"/>-->
    </path>

    <property name="distribution_project" value="${program}/../relproxy_dist/relproxy" />
   
    
    <target name="deploy_to_distribute" depends="deploy_binaries_and_manual,deploy_cmd_examples,deploy_javadoc">  <!-- ,deploy_manual -->

        <echo message="DO NOT FORGET TO CHANGE version num in conf.properties, RelProxy.getVersion()" />

        <copy file="${program}/LICENSE-2.0.txt" tofile="${distribution_project}/LICENSE-2.0.txt" />
        <copy file="${program}/README.md" tofile="${distribution_project}/README.md" />
        <copy file="${program}/CHANGES.txt" tofile="${distribution_project}/CHANGES.txt" />

        <delete dir="${distribution_project}/tmp" />        
        
        <property name="distribution_file" value="${distribution_project}/../RelProxy_bin_${program.version}.tar.gz" />        
        <delete file="${distribution_file}" />
        <!--<zip basedir="${distribution_project}" destfile="${distribution_file}" />-->
        
        <tar basedir="${distribution_project}" destfile="${distribution_file}" compression="gzip" />      
    </target>

    <target name="deploy_binaries_and_manual">  <!-- ,deploy_manual -->

        <property name="pom" value="${program}/pom.xml" />
        <artifact:mvn pom="${pom}" mavenHome="${maven_folder}" fork="true"> <!-- fork="true" is needed: https://netbeans.org/bugzilla/show_bug.cgi?format=multiple&id=47645 -->
            <arg value="clean"/>
        </artifact:mvn>          
        <artifact:mvn pom="${pom}" mavenHome="${maven_folder}" fork="true"> <!-- fork="true" is needed: https://netbeans.org/bugzilla/show_bug.cgi?format=multiple&id=47645 -->
            <arg value="compile"/>
        </artifact:mvn>        
        
        <property name="distribution_project_lib" value="${distribution_project}/lib" />
        <delete dir="${distribution_project_lib}" />
        
        <!-- Copying compiled classes -->
        <jar basedir="${program.target}/classes"
             destfile="${distribution_project_lib}/relproxy-${program.version}.jar"
             includes="com/**">
            <manifest>
                <attribute name="Built-By" value="${user.name} - Jose Maria Arranz"/>
                <attribute name="Implementation-Title" value="${program.name}" />
                <attribute name="Implementation-Vendor" value="Jose Maria Arranz Santamaria" />
                <attribute name="Implementation-Version" value="${program.version}" />
            </manifest>
        </jar>

        <property name="distribution_project_bin" value="${distribution_project}/bin" />
        <delete dir="${distribution_project_bin}" />

        <copy file="${program}/bin/jproxysh" todir="${distribution_project_bin}" preservelastmodified="true"   />

        <fixcrlf srcdir="${distribution_project_bin}" includes="jproxysh" eol="lf" eof="remove" />   <!-- Goodbye Windows encoding -->        
        
        <chmod file="${distribution_project_bin}/jproxysh" perm="+x"/>        
        
        <!-- Manual is also generated by Maven -->
                
        <property name="distribution_project_docs" value="${distribution_project}/docs" />        
        
        <delete file="${distribution_project_docs}/manual.html" />
        <delete file="${distribution_project_docs}/asciidoctor.css" />                
        
        <copy file="${program.target}/generated-docs/manual.html" todir="${distribution_project_docs}" preservelastmodified="true"   />        
        <copy file="${program.target}/generated-docs/asciidoctor.css" todir="${distribution_project_docs}" preservelastmodified="true"   />
                
    </target>

    <target name="deploy_cmd_examples">

        <property name="src_cmd_examples" value="${program}/src/main/cmd_examples" />
        <property name="distribution_cmd_examples" value="${distribution_project}/cmd_examples" />
        
        <property name="src_shell_ex_code" value="${program}/src/test/resources" />
        <property name="distribution_shell_ex_code" value="${distribution_project}/cmd_examples/code" />        
        
        <delete dir="${distribution_cmd_examples}" />        
        
        <copy todir="${distribution_cmd_examples}" >
            <fileset dir="${src_cmd_examples}" />
        </copy>        
        
        <delete file="${distribution_cmd_examples}/README.txt" />        

        <copy todir="${distribution_shell_ex_code}" >
            <fileset dir="${src_shell_ex_code}" />
        </copy>         
        
        <fixcrlf srcdir="${distribution_cmd_examples}" includes="**" eol="lf" eof="remove" />   <!-- Goodbye Windows encoding -->     
        
        <chmod file="${distribution_cmd_examples}/*.sh" perm="+x"/>        
        
        <chmod file="${distribution_shell_ex_code}/example_java_shell" perm="+x"/>        
        <chmod file="${distribution_shell_ex_code}/example_java_shell_complete_class" perm="+x"/> 
                
    </target>


    <target name="deploy_javadoc">
        <property name="javadoc_dir" value="${distribution_project}/docs/javadoc" />
        <delete dir="${javadoc_dir}" />
        <javadoc packagenames="com.innowhere.relproxy.*"
               sourcepath="${program.src}"
               excludepackagenames="com.innowhere.relproxy.impl.*"
               defaultexcludes="yes"
               destdir="${javadoc_dir}"
               author="true"
               version="true"
               use="true"
               windowtitle="${program.name} v${program.javadoc.prog.version}, doc. version v${program.javadoc.doc.version}">

            <classpath>
                <path refid="classPath"/>
            </classpath>

            <doctitle>
                <![CDATA[
                <h1>${program.name} v${program.javadoc.prog.version} <font size="-1">(doc. version ${program.javadoc.doc.version})</font></h1>
                ]]>
            </doctitle>
            <bottom>
                <![CDATA[
                Copyright Â© 2013 Jose Maria Arranz Santamaria.
                ]]>
            </bottom>
        </javadoc>
    </target>
    
</project>
